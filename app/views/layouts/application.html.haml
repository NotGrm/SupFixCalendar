!!!5
%html
	%head
		%title SupFixCalendar
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body.bg-blue
		%a{"href" => "https://github.com/NotGrm/SupFixCalendar"}
			%img{"style" => "position: absolute; top: 0; left: 0; border: 0;", "src" => "https://s3.amazonaws.com/github/ribbons/forkme_left_white_ffffff.png", "alt" => "Fork me on GitHub"}
		#maincontent.row
			.twothird.centered.bg-white
				.wrapper
					= yield
					%footer#footer
						.row
							.third
								%cite
									Une création de 
									=link_to "Jeremy Bertrand", "http://jbertrand.fr"

							.onesixth.push-right
								%cite
									D'après une idée originale de 
									=link_to "Pierrick Rouxel", "http://pierrickrouxel.fr"

	= render "shared/googleanalytics"

